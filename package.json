{
  "name": "Halla",
  "description": "Minimal Slack wrapper app",
  "version": "0.3.0",
  "author": "Rico Sta. Cruz <hi@ricostacruz.com>",
  "bugs": {
    "url": "https://github.com/rstacruz/halla/issues"
  },
  "chromium-args": "--mixed-context --enable-logging=stderr",
  "config": {
    "nwjs_version": "0.16.0",
    "nwb_opts": "--mac-icns assets/halla.icns"
  },
  "dependencies": {
    "classnames": "2.2.5",
    "decca": "2.1.0",
    "lodash": "4.13.1",
    "normalize.css": "4.2.0",
    "nwjs-builder": "1.13.1",
    "open": "0.0.5",
    "rc": "1.1.6",
    "redux": "3.5.2",
    "redux-thunk": "2.1.0"
  },
  "devDependencies": {
    "ava": "0.15.2",
    "nw-dev": "3.0.0",
    "tape": "4.6.0"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "homepage": "https://github.com/rstacruz/halla#readme",
  "keywords": [
    "slack",
    "ssb"
  ],
  "license": "MIT",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rstacruz/halla.git"
  },
  "scripts": {
    "dist": "nwb nwbuild -v $npm_package_config_nwjs_version ${npm_package_config_nwb_opts} -p osx64 -o dist",
    "start": "nwb nwbuild -v ${npm_package_config_nwjs_version} ${npm_package_config_nwb_opts} -r .",
    "start:sdk": "nwb nwbuild -v ${npm_package_config_nwjs_version}-sdk ${npm_package_config_nwb_opts} -r .",
    "test": "tape test/*.js"
  },
  "window": {
    "width": 1024,
    "height": 600,
    "title": "Halla"
  }
}
