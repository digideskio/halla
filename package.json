{
  "name": "Halla",
  "description": "Native Slack wrapper app without the bloat",
  "version": "0.4.0",
  "author": "Rico Sta. Cruz <hi@ricostacruz.com>",
  "bugs": {
    "url": "https://github.com/rstacruz/halla/issues"
  },
  "chromium-args": "--mixed-context --enable-logging=stderr",
  "config": {
    "nwjs_version": "0.16.0",
    "nwb_opts": "--mac-icns assets/icons/halla.icns --win-ico assets/icons/halla.ico"
  },
  "dependencies": {
    "autoprefixer": "6.3.7",
    "brunch": "2.8.2",
    "classnames": "2.2.5",
    "css-brunch": "2.6.1",
    "decca": "2.1.0",
    "iconfonts": "0.9.0",
    "lodash": "4.13.1",
    "modularscale-sass": "2.1.1",
    "normalize.css": "4.2.0",
    "npm-run-all": "2.3.0",
    "nwjs-builder": "1.13.1",
    "open": "0.0.5",
    "postcss-brunch": "0.5.0",
    "rc": "1.1.6",
    "redux": "3.5.2",
    "redux-thunk": "2.1.0",
    "sass-brunch": "2.6.3"
  },
  "devDependencies": {
    "tape": "4.6.0"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "homepage": "https://github.com/rstacruz/halla#readme",
  "keywords": [
    "slack",
    "ssb"
  ],
  "license": "MIT",
  "main": "index.html",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rstacruz/halla.git"
  },
  "scripts": {
    "css:watch": "brunch w -j 4",
    "css:build": "brunch b -j 4",
    "dist": "run-s css:build dist:win dist:osx dist:linux",
    "dist:win": "nwb nwbuild -v $npm_package_config_nwjs_version ${npm_package_config_nwb_opts} -p win64 -o dist",
    "dist:osx": "nwb nwbuild -v $npm_package_config_nwjs_version ${npm_package_config_nwb_opts} -p osx64 -o dist",
    "dist:linux": "nwb nwbuild -v $npm_package_config_nwjs_version ${npm_package_config_nwb_opts} -p linux64 -o dist",
    "nwb": "nwb nwbuild -v ${npm_package_config_nwjs_version} ${npm_package_config_nwb_opts} -r .",
    "nwb:sdk": "nwb nwbuild -v ${npm_package_config_nwjs_version}-sdk ${npm_package_config_nwb_opts} -r .",
    "start": "run-p css:watch nwb",
    "start:sdk": "run-p css:watch nwb:sdk",
    "test": "tape test/*.js"
  },
  "wdindow": {
    "width": 1024,
    "height": 600,
    "title": "Halla"
  }
}
